<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/styles.css" />
    <title>TodoList</title>
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%=kindOfDay%></h1>
    </div>
    <div class="box">
      <% newListItem.map((i)=>{ %>
      <form action="/delete" method="post">
        <div class="item">
          <input
            value="<%= i._id %>"
            type="checkbox"
            name="checked"
            onChange="this.form.submit()"
          />
          <input type="hidden" name="listName" value="<%= kindOfDay %>"></input>
          <p><%=i.name %></p>
        </div>
      </form>

      <% }) %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="Add Todo "
          autocomplete="off"
        />
        <button name="button" type="submit" value="<%=kindOfDay%>">+</button>
      </form>
    </div>
  </body>
</html>
